<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_topic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ойын-Сауық"
                android:textColor="@color/jihc"
                android:textSize="40dp"
                android:gravity="center" />

            <Button
                android:id="@+id/football"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="20dp"
                android:background="@drawable/custom_button_3"
                android:drawableStart="@drawable/ic_baseline_sports_soccer_24"
                android:drawablePadding="12dp"
                android:paddingStart="110dp"
                android:paddingEnd="110dp"
                android:text="Футбол алаңы"
                android:textColor="@color/jihc"
                app:layout_constraintTop_toBottomOf="@+id/tv_topic"
                tools:layout_editor_absoluteX="10dp" />

            <Button
                android:id="@+id/act_room"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Акт залы"
                android:drawableStart="@drawable/ic_baseline_tv_24"
                android:drawablePadding="12dp"
                android:paddingStart="110dp"
                android:paddingEnd="110dp"
                app:layout_constraintTop_toBottomOf="@+id/football"
                android:layout_margin="20dp"
                android:background="@drawable/custom_button_3"
                android:textColor="@color/jihc"/>

            <Button
                android:id="@+id/sportroom"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Спортзал"
                android:drawableStart="@drawable/ic_baseline_sports_24"
                android:drawablePadding="12dp"
                android:paddingStart="110dp"
                android:paddingEnd="110dp"
                app:layout_constraintTop_toBottomOf="@+id/act_room"
                android:layout_margin="20dp"
                android:background="@drawable/custom_button_3"
                android:textColor="@color/jihc"/>

            <Button
                android:id="@+id/tapchan"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Тапшан"
                android:drawableStart="@drawable/ic_baseline_cabin_24"
                android:drawablePadding="12dp"
                android:paddingStart="110dp"
                android:paddingEnd="110dp"
                app:layout_constraintTop_toBottomOf="@+id/sportroom"
                android:layout_margin="20dp"
                android:background="@drawable/custom_button_3"
                android:textColor="@color/jihc"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_add_24"
        android:tint="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:backgroundTint="@color/jihc"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>